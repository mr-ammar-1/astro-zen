---
import Menu from "@icons/Menu.astro";
import { Image } from "astro:assets";
import type { HeaderProps } from "@types";

type Props = HeaderProps;

const { siteLogo, navLinks } = Astro.props;
---

<header
  class="sticky top-0 z-50 mx-auto flex max-w-5xl animate-slide-in justify-between bg-black/80 backdrop-blur-md px-5 py-4 border-b border-white/5"
>
  <!-- Logo with enhanced styling -->
  <a 
    href="/" 
    aria-label="Home link"
    class="group relative"
  >
    <div class="relative">
      <!-- Animated ring around image -->
      <div class="absolute inset-0 rounded-full bg-gradient-to-r from-primary to-primary/50 opacity-0 blur-md transition-opacity duration-300 group-hover:opacity-100"></div>
      
      <!-- Image container with proper aspect ratio -->
      <div class="relative w-12 h-12 rounded-full overflow-hidden ring-2 ring-primary/20 transition-all duration-300 group-hover:ring-primary/60 group-hover:scale-105">
        <Image
          class="w-full h-full object-cover object-center scale-220"
          src={siteLogo}
          width="48"
          height="48"
          alt="website logo"
          loading="eager"
        />
      </div>
      
      <!-- Active indicator dot -->
      <div class="absolute -bottom-1 -right-1 w-3 h-3 bg-primary rounded-full border-2 border-black animate-pulse"></div>
    </div>
  </a>

  <!-- Mobile menu button with enhanced styling -->
  <button
    type="button"
    id="menu-button"
    class="group relative px-3 py-2 text-neutral transition-colors hover:text-white sm:hidden"
    aria-expanded="false"
    aria-controls="main-menu"
  >
    <div class="absolute inset-0 rounded-lg bg-primary/10 opacity-0 transition-opacity group-hover:opacity-100"></div>
    <Menu />
  </button>

  <!-- Navigation with enhanced styling -->
  <nav
    class="absolute top-20 right-5 hidden rounded-2xl border border-neutral/40 bg-black/95 backdrop-blur-xl px-6 py-6 text-neutral shadow-2xl shadow-primary/5 sm:static sm:block sm:border-0 sm:bg-transparent sm:backdrop-blur-none sm:p-0 sm:shadow-none"
    id="main-menu"
  >
    <ul class="gap-1 sm:flex sm:gap-2">
      {
        navLinks.map((link, index) => (
          <li class="relative">
            <a
              class={`nav-item group relative block px-4 py-2.5 text-sm font-medium transition-all duration-300 hover:text-white sm:py-2`}
              href={link.href}
              style={`animation-delay: ${index * 0.1}s`}
            >
              <!-- Text content -->
              <span class="relative z-10">{link.text}</span>
              
              <!-- Hover background -->
              <div class="absolute inset-0 rounded-lg bg-gradient-to-r from-primary/10 to-primary/5 opacity-0 transition-opacity duration-300 group-hover:opacity-100 sm:rounded-full"></div>
              
              <!-- Active indicator line (desktop) -->
              <div class="absolute bottom-0 left-1/2 h-0.5 w-0 -translate-x-1/2 rounded-full bg-primary transition-all duration-300 group-hover:w-3/4 hidden sm:block"></div>
              
              <!-- Active indicator dot (desktop) -->
              <div class="nav-dot absolute -bottom-1 left-1/2 h-1.5 w-1.5 -translate-x-1/2 rounded-full bg-primary opacity-0 transition-opacity duration-300 hidden sm:block"></div>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<script>
  // Toggle mobile menu with animation
  const button = document.querySelector("#menu-button");
  const menu = document.querySelector("#main-menu");
  const navItems = document.querySelectorAll("#main-menu > ul > li > a");

  const toggleMenu = () => {
    menu?.classList.toggle("hidden");
    const isHidden = menu?.classList.contains("hidden");
    button?.setAttribute("aria-expanded", `${!isHidden}`);
    
    // Animate menu items
    if (!isHidden) {
      navItems.forEach((item, index) => {
        setTimeout(() => {
          item.classList.add("animate-slide-in-mobile");
        }, index * 50);
      });
    }
  };

  button?.addEventListener("click", toggleMenu);
  navItems.forEach((item) => {
    item?.addEventListener("click", toggleMenu);
  });

  // Update navigation based on scroll position with Intersection Observer
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            const navDot = item.querySelector(".nav-dot");
            if (item.getAttribute("href") === `#${entry.target.id}`) {
              item.classList.add("text-white");
              navDot?.classList.add("opacity-100");
            } else {
              item.classList.remove("text-white");
              navDot?.classList.remove("opacity-100");
            }
          });
        }
      });
    },
    { threshold: 0.5 },
  );

  document.querySelectorAll("section").forEach((section) => {
    observer.observe(section);
  });

  // Cleanup observer
  document.onvisibilitychange = () => {
    if (document.visibilityState === "hidden") {
      observer.disconnect();
    } else {
      document.querySelectorAll("section").forEach((section) => {
        observer.observe(section);
      });
    }
  };
</script>

<style>
  header {
    animation-timeline: scroll();
    animation-range: 0 650px;
  }

  @keyframes slide-in-mobile {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-slide-in-mobile {
    animation: slide-in-mobile 0.3s ease-out forwards;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Active section indicator */
  .nav-item.text-white {
    position: relative;
  }

  /* Glassmorphism effect for mobile menu */
  @supports (backdrop-filter: blur(12px)) {
    #main-menu {
      backdrop-filter: blur(12px);
    }
  }
</style>