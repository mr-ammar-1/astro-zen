---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5 leading-relaxed">{description}</p>
    
    <!-- Enhanced Polaroid Frame with Zoom Effect -->
    <div class="relative group flex-shrink-0">
      <!-- Decorative elements -->
      <div class="absolute -inset-4 bg-gradient-to-r from-primary/20 to-primary/10 rounded-lg blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
      
      <!-- Polaroid frame -->
      <div
        class="relative h-80 w-64 rotate-[5deg] bg-white p-4 shadow-2xl transition-all duration-500 group-hover:rotate-[2deg] group-hover:scale-105 md:rotate-[7deg] md:group-hover:rotate-[3deg]"
      >
        <!-- Image container with zoom effect -->
        <div class="relative h-full w-full overflow-hidden bg-neutral/10">
          <Image
            class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-150"
            src={image}
            width="260"
            height="320"
            alt={name}
          />
          
          <!-- Overlay gradient on hover -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"></div>
        </div>
        
        <!-- Optional caption -->
        <div class="absolute bottom-2 left-4 right-4 text-center">
          <p class="font-handwriting text-sm text-neutral/60 opacity-0 transition-opacity duration-500 group-hover:opacity-100">
            {name}
          </p>
        </div>
      </div>
      
      <!-- Decorative tape effect -->
      <div class="absolute -top-3 left-1/2 h-6 w-16 -translate-x-1/2 rotate-[-5deg] bg-white/40 backdrop-blur-sm shadow-md"></div>
    </div>
  </div>
</Section>

<style>
  /* Optional handwriting font for caption */
  @import url('https://fonts.googleapis.com/css2?family=Caveat:wght@400;700&display=swap');
  
  .font-handwriting {
    font-family: 'Caveat', cursive;
  }
</style>